<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/app_toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/textLinear"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/lvh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    android:weightSum="4" >


                    <TextView
                        android:id="@+id/txtCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Code"
                        android:background="@color/blue_200"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@color/blue_100"
                        android:text="Item"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/txtcountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Qty"
                        android:background="@color/blue_200"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtcou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Rate"
                        android:background="@color/blue_100"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtcoun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Dis"
                        android:background="@color/blue_200"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="17dp"
                        android:id="@+id/check_id"
                        android:layout_weight="0.4"
                        android:text="Del"
                        android:textSize="15sp"
                        android:gravity="center"/>
                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="35"
                android:layout_marginTop="1dp"
                android:visibility="visible"
                android:id="@+id/relative_list"
                android:layout_above="@+id/footer_rel_one"
                android:layout_below="@+id/textLinear">


                <ListView
                    android:id="@+id/list_listView"
                    android:layout_width="fill_parent"
                    android:foregroundGravity="center"
                    android:divider="@color/colorWhite"
                    android:dividerHeight="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                </ListView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="35"
                android:layout_above="@+id/footer_rel_one">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    app:elevation="6dp"
                    android:onClick="onClick"
                    app:layout_behavior="a"
                    app:pressedTranslationZ="12dp"
                    app:borderWidth="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/footer_rel_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/real_footer_sec"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:id="@+id/liner_footer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/btn_report"
                        android:text="Report"
                        android:padding="5sp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.14"
                        android:layout_marginRight="2dp"
                        android:textAllCaps="false"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="TotalCount: "
                        android:gravity="center"
                        android:textSize="12sp"
                        android:id="@+id/txt_rowCount"
                        android:textAlignment="center"
                        android:layout_weight="0.3"
                        android:textColor="@color/colorPrimary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Total Quantity : "
                        android:gravity="center"
                        android:id="@+id/txt_quty"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.3"
                        android:textSize="12sp"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/update"
                        android:text="update"
                        android:padding="5sp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.14"
                        android:layout_marginRight="2dp"
                        android:textAllCaps="false"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />


                </LinearLayout>

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:id="@+id/real_footer_sec"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/lay1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/txtpartyname"
                        android:layout_weight="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:freezesText="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:text = "Party : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:freezesText="true"
                        android:id="@+id/txtbillnumber"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:layout_marginTop="3dp"
                        android:text = "BillNo : "/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lay2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/lay1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/txtdate"
                        android:layout_weight="2"
                        android:freezesText="true"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:text = "Date : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:freezesText="true"
                        android:id="@+id/txtGodownname"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:text = "Godown : "/>
                </LinearLayout>
            </RelativeLayout>
     </RelativeLayout>

        <include
            layout="@layout/prchase_entity_dialogbx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:visibility="gone"/>

    </FrameLayout>
</LinearLayout>
